@model IEnumerable<CondominioInteligente.Models.Usuario>

<h2>Aprovação usuário</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodTipoUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aprovado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodTipoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aprovado)
            </td>
            <td>
                    <a asp-action="Aprovar" asp-route-id="@item.CodUsuario">Aprovar</a> |
                    <a asp-action="Reprovar" asp-route-id="@item.CodUsuario">Reprovar</a>
            </td>
        </tr>
}
    </tbody>
</table>
