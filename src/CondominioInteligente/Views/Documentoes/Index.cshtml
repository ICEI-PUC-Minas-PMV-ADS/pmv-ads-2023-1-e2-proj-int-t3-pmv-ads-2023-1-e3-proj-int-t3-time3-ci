@model IEnumerable<CondominioInteligente.Models.Documento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Arquivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reuniao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Arquivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reuniao.Pauta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodDocumento">Alterar</a> |
                <a asp-action="Details" asp-route-id="@item.CodDocumento">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CodDocumento">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
